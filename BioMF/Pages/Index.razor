@page "/"

<div align="center">
    <h2>Subgraph Size</h2>
    <h3>@motifSizeSelected</h3>
    <input type="range" max="@maxMotifSize" step="@stepSize" @bind="motifSizeSelected" @bind:event="oninput" />
</div>
<button class="btn btn-primary" @onclick="SelectFile">Select File</button>
<button class="btn btn-outline-primary" disabled>Select Query Graph</button>

@code {
    private int maxMotifSize = 6;
    private int stepSize = 1;
    private int motifSizeSelected;

    private void SelectFile() { }
}